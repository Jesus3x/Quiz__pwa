<body>
  <div class="container">
    <h1>Desafio do Quiz</h1>
    <h2 id="faseTitle">Fase 1</h2>
    <form id="quizForm"></form>
    <button id="submitBtn">Enviar Respostas</button>
    <button id="nextPhaseBtn" style="display:none;">Pr√≥xima Fase</button>
    <button id="restartBtn" style="display:none;">Tentar Novamente</button>
    <div id="result"></div>
  </div>

  <script>
    const fases = [
      {
        titulo: "Fase 1",
        perguntas: [
          { text: "1. Qual √© a cor do c√©u em um dia limpo?", options: ["Azul", "Verde", "Amarelo"], correct: "Azul" },
          { text: "2. Quantos lados tem um quadrado?", options: ["3", "4", "5"], correct: "4" },
          { text: "3. Qual animal √© conhecido como o rei da selva?", options: ["Elefante", "Le√£o", "Cachorro"], correct: "Le√£o" },
          { text: "4. O que √© H2O?", options: ["Sal", "√Ågua", "A√ß√∫car"], correct: "√Ågua" },
          { text: "5. Qual √© o maior planeta do Sistema Solar?", options: ["Terra", "J√∫piter", "Marte"], correct: "J√∫piter" },
          { text: "6. Qual √© a capital do Brasil?", options: ["Rio de Janeiro", "Bras√≠lia", "S√£o Paulo"], correct: "Bras√≠lia" },
          { text: "7. Quantas cores tem o arco-√≠ris?", options: ["5", "6", "7"], correct: "7" },
          { text: "8. Qual elemento d√° cor verde √†s plantas?", options: ["Clorofila", "Oxig√™nio", "Glicose"], correct: "Clorofila" }
        ]
      },
      {
        titulo: "Fase 2",
        perguntas: [
          { text: "1. Qual √≥rg√£o bombeia o sangue no corpo humano?", options: ["F√≠gado", "Pulm√£o", "Cora√ß√£o"], correct: "Cora√ß√£o" },
          { text: "2. Qual planeta √© conhecido como planeta vermelho?", options: ["Marte", "Saturno", "V√™nus"], correct: "Marte" },
          { text: "3. Qual √© o menor continente?", options: ["√Åfrica", "Austr√°lia", "Europa"], correct: "Austr√°lia" },
          { text: "4. Qual inventor criou a l√¢mpada el√©trica?", options: ["Edison", "Einstein", "Tesla"], correct: "Edison" },
          { text: "5. Qual √© o s√≠mbolo qu√≠mico do ouro?", options: ["Ag", "Au", "Fe"], correct: "Au" },
          { text: "6. Qual desses animais voa?", options: ["Galinha", "Pinguim", "Morcego"], correct: "Morcego" },
          { text: "7. Qual desses √© um g√°s?", options: ["√Ågua", "Ar", "Areia"], correct: "Ar" },
          { text: "8. Quantos segundos tem um minuto?", options: ["60", "100", "30"], correct: "60" }
        ]
      },
      {
        titulo: "Fase 3",
        perguntas: [
          { text: "1. Qual pa√≠s √© famoso pela Torre Eiffel?", options: ["It√°lia", "Fran√ßa", "Espanha"], correct: "Fran√ßa" },
          { text: "2. Qual √© o menor osso do corpo humano?", options: ["F√™mur", "Estribo", "T√≠bia"], correct: "Estribo" },
          { text: "3. Qual √© o oceano mais profundo?", options: ["Atl√¢ntico", "Pac√≠fico", "√çndico"], correct: "Pac√≠fico" },
          { text: "4. Qual desses √© um mam√≠fero aqu√°tico?", options: ["Tubar√£o", "Golfinho", "Polvo"], correct: "Golfinho" },
          { text: "5. Qual √© a capital da Argentina?", options: ["Montevid√©u", "Buenos Aires", "Lima"], correct: "Buenos Aires" },
          { text: "6. Quem pintou a Mona Lisa?", options: ["Van Gogh", "Leonardo da Vinci", "Picasso"], correct: "Leonardo da Vinci" },
          { text: "7. Qual √© o principal g√°s do ar?", options: ["Oxig√™nio", "Hidrog√™nio", "Nitrog√™nio"], correct: "Nitrog√™nio" },
          { text: "8. O que √© um eclipse solar?", options: ["Lua entre Sol e Terra", "Sol entre Lua e Terra", "Terra entre Sol e Lua"], correct: "Lua entre Sol e Terra" }
        ]
      }
    ];

    let faseAtual = 0;

    const form = document.getElementById('quizForm');
    const submitBtn = document.getElementById('submitBtn');
    const nextPhaseBtn = document.getElementById('nextPhaseBtn');
    const restartBtn = document.getElementById('restartBtn');
    const resultDiv = document.getElementById('result');
    const faseTitle = document.getElementById('faseTitle');

    function renderQuiz() {
      form.innerHTML = '';
      resultDiv.textContent = '';
      submitBtn.style.display = 'block';
      nextPhaseBtn.style.display = 'none';
      restartBtn.style.display = 'none';
      faseTitle.textContent = fases[faseAtual].titulo;

      fases[faseAtual].perguntas.forEach((q, i) => {
        const div = document.createElement('div');
        div.className = 'question';

        const p = document.createElement('p');
        p.textContent = q.text;
        div.appendChild(p);

        q.options.forEach(option => {
          const optionId = `q${i}_${option.replace(/\s+/g, '')}`;
          const radio = document.createElement('input');
          radio.type = 'radio';
          radio.name = `q${i}`;
          radio.id = optionId;
          radio.value = option;

          const label = document.createElement('label');
          label.setAttribute('for', optionId);
          label.textContent = option;

          div.appendChild(radio);
          div.appendChild(label);
        });

        form.appendChild(div);
      });
    }

    submitBtn.addEventListener('click', (e) => {
      e.preventDefault();
      let score = 0;

      fases[faseAtual].perguntas.forEach((q, i) => {
        const selected = form.querySelector(`input[name="q${i}"]:checked`);
        const questionDiv = form.children[i];

        if (selected) {
          if (selected.value === q.correct) {
            score++;
            questionDiv.classList.add('correct');
          } else {
            questionDiv.classList.add('incorrect');
          }
        } else {
          questionDiv.classList.add('incorrect');
        }
      });

      submitBtn.style.display = 'none';

      if (score >= 6) {
        if (faseAtual === fases.length - 1) {
          resultDiv.textContent = "üéâ Parab√©ns, voc√™ conseguiu passar todas as fases!! üéâ";
        } else {
          resultDiv.textContent = `Voc√™ acertou ${score} de 8! Excelente! Vamos para a pr√≥xima fase!`;
          nextPhaseBtn.style.display = 'block';
        }
      } else {
        resultDiv.textContent = `Voc√™ acertou ${score} de 8. Continue tentando at√© conseguir!`;
        restartBtn.style.display = 'block';
      }
    });

    nextPhaseBtn.addEventListener('click', () => {
      faseAtual++;
      renderQuiz();
    });

    restartBtn.addEventListener('click', () => {
      renderQuiz();
    });

    // Inicializar
    renderQuiz();
  </script>
